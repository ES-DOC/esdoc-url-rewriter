# Set home path
export ESDOC_URL_REWRITER_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Extend python path.
export PYTHONPATH=$PYTHONPATH:$ESDOC_URL_REWRITER_HOME

# Ensure shell scripts are executable.
chmod a+x $ESDOC_URL_REWRITER_HOME/sh/*.sh

# Configuration commands.
alias url-rewriter-config-init=$ESDOC_URL_REWRITER_HOME/sh/config_init.sh
alias url-rewriter-config-update=$ESDOC_URL_REWRITER_HOME/sh/config_update.sh

# Web-service commands.
alias url-rewriter-ws=$ESDOC_URL_REWRITER_HOME/sh/ws_run.sh
alias url-rewriter-ws-daemon-init=$ESDOC_URL_REWRITER_HOME/sh/web_daemon_init.sh
alias url-rewriter-ws-daemon-kill=$ESDOC_URL_REWRITER_HOME/sh/web_daemon_kill.sh
alias url-rewriter-ws-daemon-reload='url-rewriter-ws-daemon-kill && url-rewriter-ws-daemon-init'
alias url-rewriter-ws-daemon-status=$ESDOC_URL_REWRITER_HOME/sh/web_daemon_status.sh
alias url-rewriter-ws-logs-reset=$ESDOC_URL_REWRITER_HOME/sh/web_logs_reset.sh

# Test related commands.
alias url-rewriter-tests=$ESDOC_URL_REWRITER_HOME/sh/run_tests.sh

# Initialization related commands.
alias url-rewriter-venv-init=$ESDOC_URL_REWRITER_HOME/sh/venv_init.sh
alias url-rewriter-venv-upgrade=$ESDOC_URL_REWRITER_HOME/sh/venv_upgrade.sh
